FROM --platform=i386 i386/debian:buster
ARG DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get -y upgrade && \
        apt-get install -y apt-utils bsdmainutils ca-certificates clang \
        cpio cron curl dmidecode dmsetup g++ gcc gdbm-l10n git  \
        hexedit  ifupdown init logrotate lsb-base lynx make \
        netbase openssl procps python3 python3-cryptography \
        readline-common rsyslog sensible-utils lua50 luajit \
        ssh systemd systemd-sysv tasksel tasksel-data udev vim wget whiptail \
        xxd iptables isc-dhcp-client isc-dhcp-common kmod less netcat-openbsd

# Make a user, then copy over the /example directory
RUN useradd -m user && echo "user:password" | chpasswd
COPY --chown=user:user ./examples /home/user/examples
RUN chmod -R +x  /home/user/examples/lua
RUN echo 'root:password' | chpasswd
RUN wget https://go.dev/dl/go1.20.5.linux-386.tar.gz && tar -xvzf go1.20.5.linux-386.tar.gz
COPY --chown=user:user /home/user/go/
RUN chmod -R +x /home/user/go/bin/
RUN go install github.com/charmbracelet/vhs@latest
RUN git clone https://github.com/VestigeJ/ecm-distro-tools.git && mv ./ecm-distro-tools/qa/qa-captain/bashrc .bashrc
CMD [ "/bin/bash" ]
